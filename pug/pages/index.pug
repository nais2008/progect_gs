extends ../layouts/main_layout

block content 
    main.main
        // category
        section.main__category 
            .container 
                .wraper
                    .main__category-title 
                        h1
                            | Our Most Popular bike category
                        .main__category-title-navigation 
                            h3 
                                | Category 
                            nav 
                                ul 
                                    li
                                        p Mountain Bikes
                                    li 
                                        p Road Bikes
                                    li 
                                        p Hybrid Bikes
                                    li 
                                        p Kids Bikes
                    .main__category-images 
                        .main__category-images-slider 
                            swiper-container.mySwiper(pagination='true' pagination-type='fraction')
                                swiper-slide 
                                    img(src="img/road_bike1.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike2.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike3.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike4.png", alt="")
                        .main__category-images-photo 
                            img(src="img/road_bike5.png", alt="")