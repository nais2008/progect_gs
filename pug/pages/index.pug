extends ../layouts/main_layout

block content 
    main.main
        // main-category
        section.main__category 
            .container 
                .wraper
                    .main__category-title 
                        h1
                            | Our Most Popular bike category
                        .main__category-title-navigation 
                            h3 
                                | Category 
                            nav 
                                ul 
                                    li
                                        p Mountain Bikes
                                    li 
                                        p Road Bikes
                                    li 
                                        p Hybrid Bikes
                                    li 
                                        p Kids Bikes
                    .main__category-images 
                        .main__category-images-slider 
                            swiper-container.mySwiper(pagination='true' pagination-type='fraction')
                                swiper-slide 
                                    img(src="img/road_bike1.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike2.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike3.png", alt="")
                                swiper-slide
                                    img(src="img/road_bike4.png", alt="")
                        .main__category-images-photo 
                            img(src="img/road_bike5.png", alt="")
        // main-product
        section.main__product
            .container 
                .wraper 
                    .main__product-title 
                        h1 
                            | Explore Our Product
                        p 
                            | Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. 
                    .main__product-wraper 
                        .main__product-wraper-blocks 
                            .block.block1
                                div
                                    h4 Road helmet 
                                    b $60
                                img(src="img/product1.png", alt="")
                                i ↗
                            .block.block2
                                div
                                    h4 Bike water bottle
                                    b $60
                                img(src="img/product2.png", alt="")
                                i ↗
                            .block.block3
                                div
                                    h4 Bike pump
                                    b $80
                                img(src="img/product3.png", alt="")
                                i ↗
                            .block.block4
                                div
                                    h4 Tire repair kit 
                                    b $120
                                img(src="img/product4.png", alt="")
                                i ↗
                        button(type="submit") 
                            | Explore All